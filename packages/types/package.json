{
  "name": "@agentic/platform-types",
  "version": "8.4.1",
  "description": "Core schemas and types shared across the Agentic platform.",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transitive-bullshit/agentic.git",
    "directory": "packages/types"
  },
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "sideEffects": false,
  "source": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "generate": "run-s generate:*",
    "generate:openapi": "openapi-typescript http://localhost:3001/docs --output ./src/openapi.d.ts",
    "generate:json-schema": "tsx bin/generate-project-config-json-schema.ts > ../../apps/web/public/schema.json",
    "build": "tsup",
    "clean": "del dist",
    "test": "run-s test:*",
    "test:typecheck": "tsc --noEmit",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "@agentic/platform-core": "workspace:*",
    "@agentic/platform-validators": "workspace:*",
    "@hono/zod-openapi": "catalog:",
    "ms": "catalog:",
    "type-fest": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/ms": "catalog:",
    "openapi-typescript": "catalog:",
    "restore-cursor": "catalog:",
    "zod-to-json-schema": "catalog:"
  },
  "publishConfig": {
    "access": "public",
    "files": [
      "dist"
    ],
    "types": "./dist/index.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.js"
      }
    }
  }
}
