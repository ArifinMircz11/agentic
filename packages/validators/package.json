{
  "name": "@agentic/platform-validators",
  "version": "8.0.0",
  "description": "Validation utils for the Agentic platform.",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transitive-bullshit/agentic.git",
    "directory": "packages/validators"
  },
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "source": "./src/index.ts",
  "types": "./src/index.ts",
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "tsup",
    "clean": "del dist",
    "test": "run-s test:*",
    "test:typecheck": "tsc --noEmit",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "@agentic/platform-core": "workspace:*",
    "@paralleldrive/cuid2": "catalog:",
    "email-validator": "catalog:",
    "type-fest": "catalog:"
  },
  "publishConfig": {
    "access": "public",
    "files": [
      "dist"
    ],
    "exports": {
      "types": "./dist/index.ts",
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.js"
      }
    }
  }
}
